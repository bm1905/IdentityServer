@page
@model IdentityServer.Pages.Account.ForgotPassword.ResetPasswordModel
@{
}

<div>
    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-12 col-lg-6 offset-lg-3">
            <div class="card">
                <div class="card-header">
                    <h2>Reset Password</h2>
                </div>
                <div class="card-body">
                    <form asp-route="ForgotPassword">
                        <input type="hidden" asp-for="Input.ReturnUrl" />
                        <input type="hidden" asp-for="Input.Email" />
                        <input type="hidden" asp-for="Input.ResetToken" />

                        <div class="form-group">
                            <label asp-for="Input.Password">Password</label>
                            <input type="password" class="form-control" placeholder="password"
                                   asp-for="Input.Password" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <input type="password" class="form-control" placeholder="password"
                                   asp-for="Input.ConfirmPassword" autofocus>
                        </div>
                        <button type="submit" class="btn btn-primary" name="button" value="register">Submit</button>
                    </form>
                </div>
                <div class="card-footer">
                    <a asp-page="../Login/Index" asp-route-returnUrl="@Model.Input.ReturnUrl">Already have an account? Login</a>
                </div>
            </div>
        </div>
    </div>

</div>

