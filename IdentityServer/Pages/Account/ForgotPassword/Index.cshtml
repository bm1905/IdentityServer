@page
@model IdentityServer.Pages.Account.ForgotPassword.IndexModel
@{
}

<div>
    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-12 col-lg-6 offset-lg-3">
            <div class="card">
                <div class="card-header">
                    <h2>Reset password</h2>
                </div>
                <div class="card-body">
                    <form asp-route="ResetPassword">
                        <input type="hidden" asp-for="Input.ReturnUrl" />
                        <div class="form-group">
                            <label asp-for="Input.Email">Email Address</label>
                            <input class="form-control" placeholder="email" asp-for="Input.Email" autofocus>
                        </div>
                        <button type="submit" class="btn btn-primary" name="button" value="register">Reset</button>
                    </form>
                </div>
                <div class="card-footer">
                    <a asp-page="../Login/Index" asp-route-returnUrl="@Model.Input.ReturnUrl">Back to Login</a>
                </div>
            </div>
        </div>
    </div>

</div>